<li class="movie-item">
  <div class="movie-thumbnail" data-action="click->homes#previewVideo" data-youtube-id="<%= video.youtube_id %>">
    <%= image_tag video.thumbnail_url, loading: "lazy", alt: "â€¦", width: "200", height: "200" %>
  </div>
  <div class="movie-detail">
    <div class="movie-title">
      <%= video.title %>
    </div>
    <div class="movie-author">
      <div class="movie-author-avatar"></div>
      <div class="movie-author-name">
        Shared by: <span><%= video.user.email %></span>
      </div>
    </div>
    <div class="movie-subtitle">
      <div class="movie-likes">
        <span class="icon like<%= ' readonly' if current_user.blank? %><%= ' active' if reacts.detect { |react| react.youtube_video_id == video.id && react.like? } %>" data-action="click->homes#likeVideo" data-id="<%= video.id %>" id="like-<%= video.id %>"><%= number_with_delimiter(video.like_count) %></span>
        <span class="icon dislike<%= ' readonly' if current_user.blank? %><%= ' active' if reacts.detect { |react| react.youtube_video_id == video.id && react.dislike? } %>" data-action="click->homes#dislikeVideo" data-id="<%= video.id %>" id="dislike-<%= video.id %>"><%= number_with_delimiter(video.dislike_count) %></span>
      </div>
    </div>
    <div class="movie-description">
      <div class="movie-description-title">Description:</div>
      <div class="movie-description-content"><%= simple_format(video.description) %></div>
    </div>
  </div>
</li>

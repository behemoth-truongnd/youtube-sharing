<div class="modal fade" id="youtubeShareModal" tabindex="-1" role="dialog" aria-labelledby="youtubeShareModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_for [@form], url: youtube_videos_path(@form), method: :post do |f| %>
      <div class="modal-header">
        <h5 class="modal-title" id="youtubeShareModalLabel">Share a youtube movie</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="url-wrapper">
          <%= f.label :youtube_url, "Youtube URL:", class: "col-form-label" %>
          <%= f.text_field :youtube_url, class: "form-control", id: "youtube-url" %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit "Share movie", class: 'btn btn-primary', data: { action: "homes#shareMovie" } %>
      </div>
      <% end %>
    </div>
  </div>
</div>

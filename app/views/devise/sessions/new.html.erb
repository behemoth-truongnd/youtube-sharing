<div class="row">
  <div class="col-sm-12 col-md-10 mx-auto">
    <div class="card border-0 shadow rounded-3 my-5">
      <div class="card-body p-4 p-sm-5">
        <h5 class="card-title text-center mb-5 text-uppercase fw-bold fs-5">Sign In</h5>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-floating mb-3">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "name@example.com" %>
            <%= f.label :email, "Email address" %>
          </div>

          <div class="form-floating mb-3">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
            <%= f.label :password, "Password" %>
          </div>

          <div class="form-check mb-3">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, "Remember password", class: "form-check-label" %>
          </div>

          <div class="d-grid">
            <%= f.submit "Sign in", class: "btn btn-primary btn-login text-uppercase fw-bold" %>
          </div>

          <hr class="my-4">
          <div class="d-grid">
            <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-success btn-login text-uppercase fw-bold" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

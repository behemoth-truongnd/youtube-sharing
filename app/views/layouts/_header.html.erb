<div class="app-header">
  <div class="box-left">
    <ul class="menu">
      <li>
        <span><%= link_to "Funny Movies", root_path  %></span>
      </li>
    </ul>
  </div>
  <div class="box-right">
    <% if current_user.present? %>
      <ul class="menu">
        <li>
          <span><small>Welcome <%= current_user.email %></small></span>
        </li>
        <li>
          <%= link_to "Logout", destroy_user_session_path, data: { action: "common#linkDestroy" } %>
        </li>
        <li class="upload">
          <a href="#" data-toggle="modal" data-target="#youtubeShareModal">Share a movie</a>
        </li>
      </ul>
    <% else %>
      <ul class="menu" >
        <li class="upload">
          <%= link_to 'Login / Register', new_user_session_path %>
        </li>
      </ul>
    <% end %>
  </div>
</div>
